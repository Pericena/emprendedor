<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/ic_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titleupcliente"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="CATALOGO"
        android:textColor="#F8F8F8"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="id :"
        android:textColor="@color/color_white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Ingresar id"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#090D28"
        android:textColorHint="#181B3A"
        android:textColorLink="#181B3A" />

    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Nombre Catalogo :"
        android:textColor="@color/color_white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtnombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Ingresar nombre del catalogo"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textColor="#090D28"
        android:textColorHint="#181B3A"
        android:textColorLink="#181B3A" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/agregar"
            android:onClick="InsertUpdatedButton"
            android:text="Agregar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/editar"
            android:onClick="InsertUpdatedButton"
            android:text="Modificar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/eliminar"
            android:onClick="InsertUpdatedButton"
            android:text="Eliminar"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="382dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="387dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>

