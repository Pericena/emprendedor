<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/icproforma_bg"
    android:orientation="vertical"
    tools:context=".Presentacion.PDetalleCatalogo">


    <TextView
        android:id="@+id/textViewid"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="id :"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Ingresar ID"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="#090D28"
        android:textColorHint="#181B3A"
        android:textColorLink="#181B3A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textProducto"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Productos"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCliente"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Cliente"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="12dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="ExtraText">

        >

        <TextView
            android:id="@+id/textViewprecio"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Precio:"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtprecio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint="Ingresar Precio Bs"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="#090D28"
            android:textColorHighlight="#181B3A" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/agregar"
            android:text="Agregar"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="322dp" />


        <Button
            android:id="@+id/btEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/eliminar"
            android:text="Eliminar"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="318dp" />

        <Button
            android:id="@+id/btPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/expediente"
            android:text="PDF"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="318dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>