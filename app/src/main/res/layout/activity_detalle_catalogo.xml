<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@drawable/ic_bg"
    android:orientation="vertical"
    tools:context=".Presentacion.PDetalleCatalogo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewid"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="idCatalogo"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewnombre"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#FBFBFB"
            android:ems="10"
            android:hint="Ingresar ID"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#181B3A"
            android:textColorHint="#090D28"
            android:textColorLink="#090D28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textProducto"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Productos"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:padding="12dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/agregar"
            android:text="Agregar"
            android:textColor="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="322dp" />


        <Button
            android:id="@+id/btEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/eliminar"
            android:text="Eliminar"
            android:textColor="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="318dp" />

        <Button
            android:id="@+id/btPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:drawableRight="@drawable/expediente"
            android:text="PDF"
            android:textColor="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="318dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#181B3A"
            android:text="Whatssap"
            android:textColor="#FFFFFF"
            app:cornerRadius="5dp"
            tools:layout_editor_absoluteX="299dp"
            tools:layout_editor_absoluteY="318dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>


</LinearLayout>