<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icentregaic_bg"
    android:orientation="vertical"
    tools:context=".Presentacion.PUbicacionMapsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textlongitud"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Longitud"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtLongitud"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxHeight="48dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="Name"
            android:textColor="#090D28"
            android:textColorHint="#181B3A"
            android:textColorLink="#090D28"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textlatitud"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Latitud"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtLatitud"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:autofillHints=""
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxHeight="48dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:text="Name"
            android:textColor="#090D28"
            android:textColorHint="#181B3A"
            android:textColorLink="#090D28"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:padding="12dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:padding="12dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btEnviarUb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#55d061"
            android:drawableRight="@drawable/whatsapp"
            android:text="Whatsapp"
            android:textColor="#FFFFFF"
            app:cornerRadius="5dp" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            tools:context=".MapsActivity" />
    </LinearLayout>


</LinearLayout>